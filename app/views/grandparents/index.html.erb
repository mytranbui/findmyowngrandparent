
<%# <h1>Grandparents</h1> %>


<div class="container">
  <div class="row justify-content-between">
      <% @grandparents.each do |grandparent|%>
        <%# <% if grandparent.user == current_user %>
        <div class="card-grandparents col-6 mt-5">
          <img src="https://imgflip.com/s/meme/Grandma-Finds-The-Internet.jpg" />
          <div class="card-grandparents-infos">
            <h2><%= grandparent.name %></h2>
            <h2><%= grandparent.age %> years old</h2>
            <br>
            <%= link_to "See more", grandparent_path(grandparent), class: "clickbutton-grandparens-index", style: "text-decoration: none" %>
            <br>
            <%= link_to "Book", new_grandparent_booking_path(grandparent), class: "clickbutton-grandparens-index", style: "text-decoration: none" %>
          </div>
        </div>
        <%# <% end %>
      <% end %>
  </div>
</div>

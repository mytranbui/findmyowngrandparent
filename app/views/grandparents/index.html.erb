
<%# <h1>Grandparents</h1> %>

<div class="container">
  <div class="row justify-content-between">
      <% @grandparents.each do |grandparent|%>
        <%# <% if grandparent.user == current_user %>
        <div class="card-grandparents col-6 mt-5">
          <img src="https://imgflip.com/s/meme/Grandma-Finds-The-Internet.jpg" />
          <div class="card-grandparents-infos">
            <h2><%= grandparent.name %></h2>
            <h2><%= grandparent.age %> years old</h2>
            <br>
            <h2><%= link_to "See more", grandparent_path(grandparent)%></h2>
            <h2><%= link_to "Book", new_grandparent_booking_path(grandparent)%></h2>
          </div>
        </div>
        <%# <% end %>
      <% end %>
  </div>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

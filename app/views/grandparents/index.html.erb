
<%# <h1>Grandparents</h1> %>


<div class="container">
  <div class="row justify-content-between">

      <% @grandparents.each do |grandparent|%>
        <div class="card-product mt-5 col-lg-6">
          <img src="https://imgflip.com/s/meme/Grandma-Finds-The-Internet.jpg" />
          <div class="card-product-infos">
            <h2>Name: <%= grandparent.name %></h2>
            <h2>Age: <%= grandparent.age %></h2>
            <br>
            <h2><%= link_to "See more", grandparent_path(grandparent)%></h2>
            <h2><%= link_to "Book", new_grandparent_booking_path(grandparent)%></h2>
          </div>
        </div>
      <% end %>
  </div>
  <a class="btn btn-ghost clickbutton" href="/home"> Back Home</a>
</div>

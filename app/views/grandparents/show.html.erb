<div class="container mt-5">
<h2><%= @grandparent.name %></h2>
<br>
  <label class="form-control">
    <p>AGE:<%= @grandparent.age %> </p>
    <p> DESCRIPTION:<%= @grandparent.description %> </p>
<%# <div class="red-text"><%= link_to "Remove",bookmark_path(bookmark),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}</div> %>
  </label>

<% if @grandparent.user != current_user %>
<p><%= "Do you want to book #{@grandparent.name}?" %> </p>
<br>
<p> Then </p>
<%= link_to " Book", new_grandparent_booking_path(@grandparent), :class => "btn btn-inverse fas fa-heart"%>
<% end %>
<br>
<br>
<% if @grandparent.user == current_user %>
<%= link_to "Destroy", grandparent_path(@grandparent),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn btn-danger" %> /
<%= link_to "Edit", edit_grandparent_path, :class => "btn btn-warning" %>
<% end %>
<br>
<%= link_to "See other Grannies and Grampies", grandparents_path, :class => "btn btn-inverse" %>
</div>
